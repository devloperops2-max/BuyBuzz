rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =========== Helper Functions ===========
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'admin@example.com';
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // =========== User Data ===========
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId);
      allow update, delete: if isOwner(userId);

      // --- Nested User Collections ---
      match /cart/{productId} {
        allow read, write: if isOwner(userId);
      }

      match /orders/{orderId} {
        allow read, write: if isOwner(userId) || isAdmin();

        match /orderItems/{orderItemId} {
          allow read, write: if isOwner(userId) || isAdmin();
        }

        match /orderStatuses/{orderStatusId} {
          allow read, write: if isOwner(userId) || isAdmin();
        }
      }
    }

    // =========== Public Collections ===========
    match /products/{productId} {
      allow read: if true; // anyone can read products
      allow write: if request.auth != null; // only authenticated users can write
    }

    // =========== Admin Global Access ===========
    // Allows admin to read/write/list across all data (except the root collection list)
    match /{document=**} {
      allow read, write, list: if isAdmin();
    }
  }
}
